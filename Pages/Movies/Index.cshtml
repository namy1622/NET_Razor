@page
@model razorwebapp_sql.Pages_Movies.IndexModel

@{
    ViewData["Title"] = "Các bài viết";
    int i = 0;
}

@{
    var pagingmodel = new razor_Paging.Helper.PagingModel(){
        currentpage = Model.currentPage, 
        countpages = Model.countPages,
        generateUrl = (int? p ) => Url.Page("/Movies/Index", new {p = p})
    };

}

<partial name = "_Paging" model="@pagingmodel"/>


<h1>Danh sách bài viết</h1>

<form  method="get" asp-page="./Index">
    <label for="">Tìm kiếm</label>
    <input name="SearchString" value="">
    <button type="submit">Tìm</button>
</form>

<p>
    <a asp-page="Create" class = "btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].PublishDate)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
        <tr>
            <td> @(++i)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Chỉnh sửa</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Xem</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
